# Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Application
SECRET_KEY=your-secret-key-change-in-production
APP_NAME=ProductionFlaskApp

# Database
DATABASE_URL=sqlite:///app.db

# Server
HOST=0.0.0.0
PORT=5000
GRPC_PORT=50051

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
CORS_ORIGINS=*
RATE_LIMIT=100 per hour

# Observability
ENABLE_METRICS=True
